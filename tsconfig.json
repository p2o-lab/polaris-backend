{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build/",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES2017", "DOM"
    ],
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      },
      { "transform": "ts-transformer-keys/transformer" }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
