{
  "version": "0.2.0",
  "name": "Rezept ACHEMA",
  "description": "Verbessertes Rezept zur ACHEMA 2018",
  "author": "Markus Graube",
  "initialStep": "Startup.Init",
  "steps": [
    {
      "name": "Startup.Init",
      "operations": [
        {
          "pea": "Temper",
          "service": "Tempering",
          "procedure": "SetpointRampTempering",
          "command": "start",
          "parameter": [
            {
              "name": "RampDuration",
              "value": 60
            },
            {
              "name": "RampEndtemperature",
              "value": 20
            }
          ]
        },
        {
          "pea": "React",
          "service": "Empty_Service",
          "procedure": "Empty_Full",
          "command": "start",
          "parameter": [
            {
              "name": "Empty_Level_Tank_DeadBand",
              "value": 0.5
            },
            {
              "name": "Empty_VolFlow",
              "value": 3
            }
          ]
        }
      ],
      "transitions": [
        {
          "condition": {
            "type": "state",
            "pea": "Temper",
            "service": "Tempering",
            "state": "execute"
          },
          "nextStep": "Running.Vorlegen"
        }
      ]
    },
    {
      "name": "Running.Vorlegen",
      "operations": [
        {
          "pea": "React",
          "service": "Empty_Service",
          "command": "reset"
        },
        {
          "pea": "Dose",
          "service": "DoseAmount",
          "command": "start",
          "parameter": [
            {
              "name": "SetVolume",
              "value": 1
            },
            {
              "name": "SetDuration",
              "value": 30
            }
          ]
        },
        {
          "pea": "React",
          "service": "Fill_Service",
          "command": "start",
          "parameters": [
            {
              "name": "Fill_Level_Max",
              "value": 1.5
            }
          ]
        },
        {
          "pea": "React",
          "service": "Stir_Service",
          "procedure": "Stirring_Continous",
          "command": "start",
          "parameter": [
            {
              "name": "Stir_Rotation",
              "value": 100
            }
          ]
        }
      ],
      "transitions": [
        {
          "nextStep": "Running.Reagieren",
          "condition": {
            "type": "and",
            "conditions": [
              {
                "type": "state",
                "pea": "Dose",
                "service": "DoseAmount",
                "state": "completed"
              },
              {
                "type": "state",
                "pea": "Temper",
                "service": "Tempering",
                "state": "execute"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Running.Reagieren",
      "operations": [
        {
          "pea": "Dose",
          "service": "DoseAmount",
          "command": "start",
          "parameter": [
            {
              "name": "SetVolume",
              "value": "1"
            },
            {
              "name": "SetDuration",
              "value": "60"
            }
          ]
        },
        {
          "pea": "React",
          "service": "Stir_Service",
          "procedure": "Stirring_Continous",
          "command": "restart",
          "parameter": [
            {
              "name": "Stir_Rotation",
              "value": 200
            }
          ]
        },
        {
          "pea": "React",
          "service": "Aerate_Service",
          "procedure": "Aerate_Continous",
          "command": "start"
        },
        {
          "pea": "Temper",
          "service": "Tempering",
          "procedure": "SetpointRampTempering",
          "parameter": [
            {
              "name": "RampDuration",
              "value": 60
            },
            {
              "name": "RampEndtemperature",
              "value": 21
            }
          ]
        }
      ],
      "transitions": [
        {
          "nextStep": "Running.Ruhen",
          "condition": {
            "type": "and",
            "conditions": [
              {
                "type": "state",
                "pea": "Dose",
                "service": "DoseAmount",
                "state": "idle"
              },
              {
                "type": "variable",
                "pea": "Temper",
                "dataAssembly": "TI",
                "operator": ">=",
                "value": 20.95
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Running.Ruhen",
      "operations": [
        {
          "pea": "React",
          "service": "Fill_Service",
          "command": "complete"
        }
      ],
      "transitions": [
        {
          "nextStep": "Running.Ruhen.Stop",
          "condition": {
            "type": "time",
            "duration": 20
          }
        }
      ]
    },
    {
      "name": "Running.Ruhen.Stop",
      "operations": [
        {
          "pea": "React",
          "service": "Aerate_Service",
          "command": "complete"
        }
      ],
      "transitions": [
        {
          "nextStep": "Running.Abk端hlen",
          "condition": {
            "type": "state",
            "pea": "React",
            "service": "Aerate_Service",
            "state": "completed"
          }
        }
      ]
    },
    {
      "name": "Running.Abk端hlen",
      "operations": [
        {
          "pea": "Temper",
          "service": "Tempering",
          "procedure": "SetpointRampTempering",
          "parameter": [
            {
              "name": "RampDuration",
              "value": 60
            },
            {
              "name": "RampEndtemperature",
              "value": 20
            }
          ]
        }
      ],
      "transitions": [
        {
          "nextStep": "Running.Abk端hlen.Stop",
          "condition": {
            "type": "variable",
            "pea": "Temper",
            "dataAssembly": "TI",
            "operator": "<=",
            "value": 20.1
          }
        }
      ]
    },
    {
      "name": "Running.Abk端hlen.Stop",
      "operations": [
        {
          "pea": "Temper",
          "service": "Tempering",
          "command": "complete"
        },
        {
          "pea": "React",
          "service": "Stir_Service",
          "command": "complete"
        }
      ],
      "transitions": [
        {
          "nextStep": "Shutdown.Entleeren",
          "condition": {
            "type": "state",
            "pea": "React",
            "service": "Stir_Service",
            "state": "idle"
          }
        }
      ]
    },
    {
      "name": "Shutdown.Entleeren",
      "operations": [
        {
          "pea": "React",
          "service": "Empty_Service",
          "procedure": "Empty_Full",
          "command": "start"
        }
      ],
      "transitions": [
        {
          "nextStep": "completed",
          "condition": {
            "type": "state",
            "pea": "React",
            "service": "Empty_Service",
            "state": "completed"
          }
        }
      ]
    }
  ]
}
