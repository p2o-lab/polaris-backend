@startuml
'https://plantuml.com/class-diagram
!include procedure/Procedure.puml
!include ./BaseService.puml

class Service{
    + //readonly// procedures: Procedure[] = [];
    + //readonly// parameters: ServParam[] = [];
    + //readonly// connectionHandler: ConnectionHandler;
    + serviceControl: ServiceControl;
    - //readonly// logger: Category;
    - //readonly// _parentId: string;

    + Service(serviceOptions: ServiceModel, connectionHandler: ConnectionHandler, parentId: string)
    + get qualifiedName(): string
    + get commandEnable(): CommandEnableInterface
    + get state(): ServiceState
    + get lastStateCurChange(): Date
    + get currentProcedureId(): number | undefined
    + getCurrentProcedure(): Procedure |undefined
    + get requestedProcedureId(): number | undefined
    + get requestedProcedure(): Procedure | undefined
    + findProcedure(procedureId: number): Procedure | undefined
    + //async// subscribeToChanges(): Promise<void>
    + unsubscribe()
    + json(): ServiceInterface
    + //async// executeCommand(command: ServiceCommand): Promise<void>
    + start(): Promise<void>
    + restart(): Promise<void>
    + stop(): Promise<void>
    + reset(): Promise<void>
    + complete(): Promise<void>
    + abort(): Promise<void>
    + hold(): Promise<void>
    + unhold(): Promise<void>
    + pause(): Promise<void>
    + resume(): Promise<void>
    + //async// requestProcedureAutomatic(id: number): Promise<void>
    + //async// requestProcedureOperator(id: number): Promise<void>
    + //async// changeOsLevel(value: number): Promise<void>
    - validProcedureId(id: number): boolean
    + //async// setParameters(parameterOptions: ParameterOptions[], peaSet: PEA[] = []): Promise<void>
    + findInputParameter(parameterName: string): InputElement | ServParam | undefined
    - //async// sendCommand(command: ServiceMtpCommand): Promise<void>
    + //async// requestServiceSourceMode(serviceSourceMode: ServiceSourceMode): Promise<void>
    + //async// requestOpMode(opMode: OperationMode): Promise<void>
    + getDataAssemblyJson(): DataAssemblyOptions[]

}

Service *-down- "1..*" Procedure: has
Service *-left- "0..*" ConfigurationParameter

abstract class ServiceParameter

ServiceParameter <|-- ConfigurationParameter

@enduml
