{
  "name": "@plt/pfe-ree-node",
  "version": "1.7.2",
  "main": "./build/index.js",
  "types": "./build.index.d.ts",
  "description": "Server backend for PFE recipe execution engine",
  "author": "Markus Graube <markus.graube@tu-dresden.de>",
  "repository": "svn@dev.plt.et.tu-dresden.de:modulare-automation/pfe-ree-node.git",
  "homepage": "https://dev.plt.et.tu-dresden.de/modulare-automation/pfe-ree-node",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node ./src/index.ts",
    "start-dist": "node ./build/index.js",
    "start-testserver": "ts-node ./src/testServer.ts",
    "test": "nyc mocha -r ts-node/register test/**/*.ts test/**/**/*.ts",
    "typedoc": "typedoc --mode file --module commonjs --out typedoc/ --target ES6 --excludePrivate --readme none src/",
    "apidoc": "apidoc -i src/server/ -o apidoc",
    "doc": "npm run apidoc && npm run typedoc",
    "build": "rm -rf build/ && tsc",
    "build-all": "npm run build && npm run doc"
  },
  "bin": {
    "pfe-ree-node": "./bin/pfe-ree-node"
  },
  "files": [
    "build",
    "assets"
  ],
  "dependencies": {
    "@plt/pfe-ree-interface": "^1.21.1",
    "assign-deep": "^1.0.0",
    "body-parser": "^1.18.3",
    "chai-as-promised": "^7.1.1",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "cors": "^2.8.5",
    "expr-eval": "^1.2.2",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "javascript-state-machine": "^3.1.0",
    "node-pid-controller": "^1.0.1",
    "json-parse-better-errors": "^1.0.2",
    "node-opcua": "^0.5.8",
    "node-opcua-client": "^0.5.8",
    "node-opcua-server": "^0.5.8",
    "pjson": "^1.0.9",
    "promise-timeout": "^1.3.0",
    "request": "^2.88.0",
    "timeout-as-promise": "^1.0.0",
    "typescript-logging": "^0.6.3",
    "uuid": "^3.3.2",
    "ws": "^6.1.2",
    "yn": "^3.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.16",
    "nyc": "^13.1.0",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
