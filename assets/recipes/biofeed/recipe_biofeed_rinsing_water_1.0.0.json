{
  "version": "1.0.0",
  "name": "One-time rinsing with water",
  "author": "Markus Graube <markus.graube@tu-dresden.de>",
  "initial_step": "S1.Rinsing",
  "steps": [
    {
      "name": "S1.Rinsing",
      "operations": [
        {
          "service": "Rinsing",
          "command": "start",
          "parameter": [
            {
              "name": "VolumeFraction",
              "value": 0
            },
            {
              "name": "FlowRate",
              "value": 1000
            },
            {
              "name": "TimeWithoutFiltration",
              "value": 5
            }
          ]
        }
      ],
      "transitions": [
        {
          "next_step": "S1.WaitForIdle",
          "condition": {
            "type": "state",
            "service": "Rinsing",
            "state": "completed"
          }
        }
      ]
    },
    {
      "name": "S1.WaitForIdle",
      "operations": [],
      "transitions": [
        {
          "condition": {
            "type": "state",
            "service": "Rinsing",
            "state": "idle"
          },
          "next_step": "completed"
        }
      ]
    }
  ]
}